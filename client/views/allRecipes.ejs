<%- include('partials/header', { title: locals.title ? title : "Gather 'n Grub - Create Recipe", user: locals.user ? user : {authenticated: false} }) %>
<%- include('partials/modal', { user: locals.user ? user : {authenticated: false} }) %>

<h1 class="decisions">Decisions, Decisions!</h1>
<div class="row">

<% recipes.forEach((recipe) => { %>
    <div class="col-4 mb-4">
      <div class="card">
        <div class="card-body">

          <a href="/recipes/<%= recipe._id %>" class="btn btn-primary"><%= recipe.recipe_name %></a>
        </div>
        <img class="card-img-bottom" src="https://res.cloudinary.com/dq8w2lty6/image/upload/c_scale,h_scale,h_250,w_250/v1671470369/<%= recipe.image_source %>" alt="<%= recipe.image_name %>">

      </div>
    </div>
<% }) %>
</div>

<%- include('partials/footer')  %>